@model ExpressVoitures.Models.Marque

@{
    ViewData["Title"] = "Editer";
}

<h3>Editer Marque</h3>

@* <h4>Marque</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LibelleMarque" class="control-label"></label>
                <input asp-for="LibelleMarque" class="form-control" />
                <span asp-validation-for="LibelleMarque" class="text-danger"></span>
            </div>
            <div>
                &nbsp;
            </div>
            <div class="form-group d-grid gap-2 col-6 mx-auto">
                <input type="submit" value="Sauvegarder" class="btn btn-success btn-sm" />
                <a asp-action="Index" class="btn btn-outline-dark btn-sm">Liste des Marques</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
