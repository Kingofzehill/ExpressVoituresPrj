@model ExpressVoitures.Models.Finition

@{
    ViewData["Title"] = "Editer";
}

<h1>Editer</h1>

<h4>Finition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LibelleFinition" class="control-label"></label>
                <input asp-for="LibelleFinition" class="form-control" />
                <span asp-validation-for="LibelleFinition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeleId" class="control-label">Finition attachée au Modèle</label>
                <select asp-for="ModeleId" class="form-control" asp-items="ViewBag.ModeleId"></select>
                <span asp-validation-for="ModeleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des Finitions</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
