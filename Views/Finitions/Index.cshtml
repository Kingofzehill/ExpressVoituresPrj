@model IEnumerable<ExpressVoitures.Models.Finition>

@{
    ViewData["Title"] = "Liste";
}

<h1>Liste des Finitions</h1>

<p>
    <a asp-action="Create">Créer nouvelle Finition</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LibelleFinition)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Modele)*@Finition attachée au Modèle
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LibelleFinition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modele.LibelleModele)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editer</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
