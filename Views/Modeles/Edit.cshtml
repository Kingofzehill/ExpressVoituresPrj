@model ExpressVoitures.Models.Modele

@{
    ViewData["Title"] = "Editer";
}

<h3>Editer Modèle</h3>

<h4>@* Modèle *@</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MarqueId" class="control-label">Marque</label>
                <select asp-for="MarqueId" class="form-control" asp-items="ViewBag.MarqueId"></select>
                <span asp-validation-for="MarqueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibelleModele" class="control-label"></label>
                <input asp-for="LibelleModele" class="form-control" />
                <span asp-validation-for="LibelleModele" class="text-danger"></span>
            </div>
            <div>
                &nbsp;
            </div>
            <div class="form-group d-grid gap-2 col-6 mx-auto">
                <input type="submit" value="Sauvegarder" class="btn btn-success btn-sm" />
                <a asp-action="Index" class="btn btn-outline-dark btn-sm">Liste des Modèles</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
